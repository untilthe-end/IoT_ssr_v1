{{> layout/header}}

<div class="container p-5">
    {{#boardPage.content}}
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title mb-3">{{title}}</h4>
                <p class="text-muted">작성자: {{username}} | 작성일 : {{createdAt}}</p>
                <a href="/board/{{id}}" class="btn btn-primary">상세보기</a>
            </div>
        </div>
    {{/boardPage.content}}

    <!--  페이지 링크 생성 하기  -->
    <ul class="pagination d-flex justify-content-center">
        {{#boardPage.previousPageNumber}}
            <li class="page-item">
                <a class="page-link" href="/board/list?page={{boardPage.previousPageNumber}}">Previous</a>
            </li>
        {{/boardPage.previousPageNumber}}

        {{^boardPage.previousPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        {{/boardPage.previousPageNumber}}

        {{#boardPage.pageLinks}}
            <li class="page-item {{#active}} active {{/active}}">
                <a href="/board/list?page={{displayNumber}}&size={{boardPage.size}}" class="page-link">{{displayNumber}}</a>
            </li>
        {{/boardPage.pageLinks}}

        {{#boardPage.nextPageNumber}}
            <li class="page-item">
                <a class="page-link" href="/board/list?page={{boardPage.nextPageNumber}}">Next</a>
            </li>
        {{/boardPage.nextPageNumber}}

        {{^boardPage.nextPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        {{/boardPage.nextPageNumber}}


    </ul>
</div>

{{> layout/footer}}