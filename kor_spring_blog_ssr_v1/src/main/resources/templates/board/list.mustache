{{> layout/header}}

<div class="container p-5">
    <!-- 검색 form 폼 사용-->
    <div class="card mb-4">
        <div class="card-body">
            <!--            12개의 그리드로 나누어지는데-->
            <form action="/board/list" method="get" class="row g-3">
                <div class="col-md-8">                  <!-- keyword를 서버단에 뿌려줌 -->
                    <input type="text" class="form-control" name="keyword" value="{{#keyword}}{{keyword}}{{/keyword}}">
                </div>
                <div class="col-md-2">
                    <input type="hidden" name="page" value="1">
                    <input type="hidden" name="size" value="{{boardPage.size}}">
                    <button type="submit" class="btn btn-primary">검색</button>
                </div>
                <div class="col-md-2">
                    <a href="/board/list" class="btn btn-secondary">초기화</a>
                </div>
            </form>
        </div>
    </div>
    {{#boardPage.content}}
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title mb-3">{{title}}</h4>
                <p class="text-muted">작성자: {{username}} | 작성일 : {{createdAt}}</p>
                <a href="/board/{{id}}" class="btn btn-primary">상세보기</a>
            </div>
        </div>
    {{/boardPage.content}}

    <!--  페이지 링크 생성 하기  -->
    <ul class="pagination d-flex justify-content-center">
        {{#boardPage.previousPageNumber}}
            <li class="page-item">
                <a class="page-link" href="/board/list?page={{boardPage.previousPageNumber}}">Previous</a>
            </li>
        {{/boardPage.previousPageNumber}}

        {{^boardPage.previousPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        {{/boardPage.previousPageNumber}}

        {{#boardPage.pageLinks}}
            <li class="page-item {{#active}} active {{/active}}">
                <a href="/board/list?page={{displayNumber}}&size={{boardPage.size}}"
                class="page-link">{{displayNumber}}</a>
            </li>
        {{/boardPage.pageLinks}}

        {{#boardPage.nextPageNumber}}
            <li class="page-item">
                <a class="page-link" href="/board/list?page={{boardPage.nextPageNumber}}">Next</a>
            </li>
        {{/boardPage.nextPageNumber}}

        {{^boardPage.nextPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        {{/boardPage.nextPageNumber}}


    </ul>
</div>

{{> layout/footer}}